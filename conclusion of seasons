while True:
    month = input("Введите номер месяца вашего рождения: ")

    if month == '12' or month == '1' or month == '2':
        season = "зиму"
        events = "За окном падал белый снег"
    elif month == '3' or month == '4' or month == '5':
        season = "весну"
        events = "Птицы пели прекрасные песни"
    elif month == '6' or month == '7' or month == '8':
        season = "лето"
        events = "Солнце светило ярче, чем когда-либо"
    elif month == '9' or month == '10' or month == '11':
        season = "осень"
        events = "Урожай был невероятным"
    else:
        print("Неправильный номер месяца. Попробуйте снова.")
        continue

    print("Вы родились в", season, events)
    break